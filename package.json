{
  "name": "ignite",
  "displayName": "Ignite",
  "description": "Auto-attach debugger with Air hot-reload.",
  "version": "1.2.4",
  "publisher": "local",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Debuggers", "Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      { "command": "autoAttachUI.start", "title": "Ignite: Start Auto-Attach" },
      { "command": "autoAttachUI.open", "title": "Ignite: Process (Start/Stop)" },
      { "command": "autoAttachUI.stop", "title": "Ignite: Stop Auto-Attach" },
      { "command": "autoAttachUI.checkUpdate", "title": "Ignite: Check for updates" }
    ],
    "configuration": {
      "title": "Ignite",
      "properties": {
        "autoAttachUI.processName": {
          "type": "string",
          "default": "api",
          "description": "Logical process/binary name (used for PROC_NAME and process matching)."
        },
        "autoAttachUI.pollMs": {
          "type": "number",
          "default": 500,
          "description": "Polling interval (ms) for process detection. Advanced users only."
        },
        "autoAttachUI.startAir": {
          "type": "boolean",
          "default": true,
          "description": "If true, starts Air in an integrated terminal with PROC_NAME."
        },
        "autoAttachUI.startCommand": {
          "type": "string",
          "default": "make run",
          "description": "Command used to start the process (watcher/build)."
        },
        "autoAttachUI.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Check for updates automatically every 24 hours."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5"
  }
}
